
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // only authenticated users can upload to their workspace folder
    match /workspaces/{workspaceId}/docs/{allPaths=**} {
      allow read: if resource != null && (
         request.auth != null && request.auth.uid == get(/databases/(default)/documents/workspaces/$(workspaceId)).data.ownerId
         || get(/databases/(default)/documents/workspaces/$(workspaceId)).data.visibility == 'public'
      );
      allow write: if request.auth != null && request.auth.uid == get(/databases/(default)/documents/workspaces/$(workspaceId)).data.ownerId
                   && request.resource.size < 50 * 1024 * 1024; // limit 50 MB
    }

    // api keys if stored (discouraged): restricted to admin
    match /api_keys/{userId}/{allPaths=**} {
      allow read, write: if request.auth.token.admin == true;
    }
  }
}
